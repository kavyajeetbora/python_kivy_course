<MyGridLayout>

    name:name
    email:email
    phone:phone

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline:False

            Label:
                text: "Email Id"
            TextInput:
                id: email
                multiline:False

            Label:
                text: "Phone Number"
            TextInput:
                id: phone
                multiline:False

        Button:
            text: "Submit"
            font_size: 32
            on_press: root.submit()
