<Button>
    font_size:32
    size_hint: (0.3,0.3)  ## relative size to app size, 30% of the width and height of the app

<MyLayout>

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top Left"
            pos_hint: {"x": 0, "top":1}

        Button:
            text: "Top Right"
            pos_hint: {"x": 0.7, "top":1}

        Button:
            text: "Center"
            pos_hint: {"x": 0.35, "y":0.35}

        Button:
            text: "Bottom Left"
            pos_hint: {"x": 0, "top":0.3}

        Button:
            text: "Bottom Right"
            pos_hint: {"x": 0.7, "top":0.3}
