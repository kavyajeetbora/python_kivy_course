Screen:

    MDCard:
        size_hint: None, None
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        size: (300,400)
        elevation: 10
        padding: 20
        spacing: 30
        orientation: "vertical"

        MDLabel:
            id: welcome_label
            text: "Welcome to KivyMD library"
            halign: "center"
            font_size: 32

        MDTextFieldRound:
            id: user
            icon_left: "account"
            hint_text: "enter your name"
            font_size: 20

        MDTextFieldRound:
            id: email
            icon_left: "email"
            hint_text: "enter your email ID:"
            font_size: 20

        MDFillRoundFlatButton:
            text: "LOGIN"
            pos_hint: {"center_x":0.5}
            on_press: app.log_in()

        MDFillRoundFlatButton
            text: "CLEAR"
            pos_hint: {"center_x": 0.5}
            on_press: app.clear()
