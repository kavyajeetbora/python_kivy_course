<MyLayout>

    BoxLayout:
        orientation: "vertical"
        # padding: 10
        spacing: 10
        size: root.width, root.height

        Label:
            id: name_label
            text: "What's your name ?"
            font_size: 32

        TextInput:
            id: name_input
            multiline: False
            size_hint: (1,0.5)

        Button:
            text: "Submit"
            font_size: 32
            size_hint: (1,0.5)
            on_press: root.press()
